@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="logo">
	ТК &laquo;Горбушкин Двор&raquo;
</div>
<div class="content">
	<img id="LockScreen" src="@Url.Content(ViewBag.Advertisement.Uri)" alt="advertise" />
</div>
<div class="footer">
	<span>
		Навигация по ТК &laquo;Горбушкин Двор&raquo; 
		<a href="~/main"><img src="~/Content/images/black_arrow_rigth.png" alt="arrow" /></a>
	</span>
	<span class="help-message">
		Коснитесь экрана, что бы начать работу
	</span>
</div>

@section scripts {

<script type="text/javascript">
	$(document).ready(function () {
		setTimeout(function () { rotate(); }, @ViewBag.Advertisement.Duration.TotalMilliseconds);
		$(document).click(function () {
			$('body').addClass('animated fadeOut');
			window.location.href = '/Main/Index';
			if (_gaq) {
				_gaq.push()['_trackEvent', 'Сеансы', 'Начало', 'Новый сеанс' ];
			}
		});
		
		// отсылаем данные в GA
		if (_gaq) {
			_gaq.push(['_trackEvent', 'Images', 'Show', '@ViewBag.Advertisement.Name']);
		}
	});

	function rotate() {
		Animation.fadeOut('.content');
		$.post('/Home/Rotate', function (data) {
			// отсылаем данные в GA
			if (_gaq) {
				_gaq.push(['_trackEvent', 'Images', 'Show', data.name]);
			}
		
			setTimeout(function () { 
				$('#LockScreen').attr('src', data.imageSource);
				Animation.fadeIn('.content'); 
				setTimeout(function () { rotate(); }, data.duration);
			}, 1000);
		});
	}
</script>

}