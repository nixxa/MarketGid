@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="logo">
	<img src="~/Content/images/mflogo.png" alt="Mosfilm logo" /> МОСФИЛЬМ
</div>
<div class="content">
	<img id="adImage" src="@ViewData["imageSource"]" alt="advertise" />
</div>
<div class="footer">
	<span>
		Навигация по МОСФИЛЬМУ <a href="~/main"><img src="~/Content/images/black_arrow_rigth.png" alt="arrow" /></a>
	</span>
	<span class="help-message">
		Коснитесь экрана, что бы начать работу
	</span>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		setTimeout(function () { rotate(); }, @ViewData["duration"]);
		$(document).click(function () {
			$('body').addClass('animated fadeOut');
			window.location.href = '/Main/Index';
		});
	});

	function rotate() {
		$.ajax({
			type: 'POST',
			url: '/Home/Rotate',
			dataType: 'json',
			success: function (data) {
				$('#adImage').attr('src', data.imageSource);
				setTimeout(function () { rotate(); }, data.duration);
			}
		});
	}
</script>
